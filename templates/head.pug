doctype html

html(lang="en")
  head
    {% if meta is not none %}
    title {{meta["title"]}}

    meta(charset="utf-8")
    link(rel="author" href="https://about.argarak.me/")
    link(rel="license" href="https://about.argarak.me/licensing")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width")
    link(rel="shortcut icon" href="{{meta.current_favicon}}")
    meta(name="description" content="{{meta.description}}")

    {% if meta.is_article == true %}
    meta(name="keywords" content="{{meta.article.tags}}")
      //meta(name="Argarak" lang="en" content="")
    {% else %}
    meta(name="keywords" content="{{meta.default_tags}}")
    {% endif %}
    {% endif %}
    
    {% for style in sources.styles %}
    link(rel="stylesheet" href="{{style}}")
    {% endfor %}
    
    {% for script in sources.scripts %}
    script(src="{{script}}")
    {% endfor %}

    link(href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700\
    |Material+Icons' rel="stylesheet")
    
    block head_append
    
  body
    #app
      md-layout(md-row style="height: 100vh")
        block body
        //md-layout(md-vertical-align="end")
        md-tabs#nav-tabs(md-centered md-elevation=5)
          md-tab(md-icon-src="{{'/icon/nexus.svg'     | absolute }}")
          md-tab(md-icon-src="{{'/icon/about.svg'     | absolute }}")
          md-tab(md-icon-src="{{'/icon/blog.svg'      | absolute }}")
          md-tab(md-icon-src="{{'/icon/programs.svg'  | absolute }}")
          md-tab(md-icon-src="{{'/icon/archive.svg'   | absolute }}")
          md-tab(md-icon-src="{{'/icon/microblog.svg' | absolute }}")
          md-tab(md-icon-src="{{'/icon/rss.svg'       | absolute }}")