doctype html

html(lang="en")
  head
    {% if meta is not none %}
    title {{meta["title"]}}

    meta(charset="utf-8")
    link(rel="author" href="https://about.argarak.me/")
    link(rel="license" href="https://about.argarak.me/licensing")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width")
    link(rel="shortcut icon" href="{{meta.current_favicon}}")
    meta(name="description" content="{{meta.description}}")

    {% if meta.is_article == true %}
    meta(name="keywords" content="{{meta.article.tags}}")
      //meta(name="Argarak" lang="en" content="")
    {% else %}
    meta(name="keywords" content="{{meta.default_tags}}")
    {% endif %}
    {% endif %}
    
    {% for style in sources.styles %}
    link(rel="stylesheet" href="{{style}}")
    {% endfor %}
    
    {% for script in sources.scripts %}
    script(src="{{script}}")
    {% endfor %}

    link(href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons' rel="stylesheet")
    
    block head_append
    
  body
    #app
      md-layout(md-column style="height: 100vh")
        block body
        md-layout(md-vertical-align="end")
          md-tabs#nav-tabs(md-centered md-elevation=5)
            template(slot="header-item" scope="props")
              //md-icon(v-if="props.header.icon") ${ props.header.icon }
              md-icon(v-if="props.header.options && props.header.options.icon_src" md-src="${ props.header.options.icon_src }")
              template(v-if="props.header.options && props.header.options.new_badge")
                span(v-if="props.header.label" class="label-with-new-badge")
                  ${ props.header.label }
                  span(class="new-badge") ${ props.header.options.new_badge }
              template(v-else)
                span(v-if="props.header.label") ${ props.header.label }

            md-tab(md-icon-src="https://argarak.github.io/navbar/nexus.svg")
            md-tab(md-icon='info')
            md-tab(md-icon='subject')
            md-tab(md-icon='archive')
            md-tab(md-icon='chat_bubble')
            md-tab(md-icon='rss_feed')             
    script.
      Vue.use(VueMaterial);
      
      Vue.material.registerTheme('default', {
        primary: 'red',
        accent: 'pink',
        warn: 'red',
        background: {
          color: 'grey',
          hue: 900
        }
      });

      var app = new Vue({
        el: '#app',
        data: {
          tabs: ["a", "b", "c"],
          active: true
        }
      });