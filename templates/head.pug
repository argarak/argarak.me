doctype html

html(lang="en")
  head
    {% if meta is not none %}
    title {{meta["title"]}}

    meta(charset="utf-8")
    link(rel="author" href="https://about.argarak.me/")
    link(rel="license" href="https://about.argarak.me/licensing")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width")
    link(rel="shortcut icon" href="{{meta.current_favicon}}")
    meta(name="description" content="{{meta.description}}")

    {% if meta.is_article == true %}
    meta(name="keywords" content="{{meta.article.tags}}")
      //meta(name="Argarak" lang="en" content="")
    {% else %}
    meta(name="keywords" content="{{meta.default_tags}}")
    {% endif %}
    {% endif %}
    
    {% for style in sources.styles %}
    link(rel="stylesheet" href="{{style}}")
    {% endfor %}
    
    {% for script in sources.scripts %}
    script(src="{{script}}")
    {% endfor %}

    link(href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons' rel="stylesheet")
    
    block head_append
    
  body
    #app
      md-layout(column style="height: 100vh")
        block body
        md-layout(column md-vertical-align="end")
          md-tabs#nav-tabs(md-right)
            md-tab(md-icon='phone')
            md-tab(md-icon='favorite')
            md-tab(md-icon='near_me')
    script.
      Vue.use(VueMaterial)
      
      var app = new Vue({
        el: '#app',
        data: {
          tabs: ["a", "b", "c"],
          active: true
        }
      })