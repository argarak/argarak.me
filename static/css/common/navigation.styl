
$nav-color = #070707

/* Colour and Positioning */
#navigation
  display flex
  position fixed

  flex-direction column
  justify-content center
  align-items center

  height 48px
  width 100vw

  bottom 0

  background-color $nav-color

  .tab-container
    flex 99
    display flex
    align-items center

    max-width 100vw
    overflow-x hidden

    margin-left 48px

    .highlight-bar
      position relative
      bottom -22px
      height 2px
      min-width 64px

      background-color #000

    .tab
      user-drag none
      user-select none
      padding 8px
      *
        height 24px

/* Interactivity */
.tab
  transition all 0.1s

  &:hover
    background rgba(255,255,255,0.01)
    border-radius 2px
    cursor pointer

  &:focus
    outline none
    background rgba(255,255,255,0.1)
    border-radius 2px
    cursor pointer

  &:active
    background rgba(255,255,255,0.1)

#navigation
  transition all 0.2s linear
  filter brightness(50%)

  &:hover
    filter brightness(100%)